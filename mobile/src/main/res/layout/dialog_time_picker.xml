<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/relativeLayout4">

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <NumberPicker
            android:id="@+id/day_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/day_picker"
            android:layout_toRightOf="@+id/day_picker"
            android:text="days" />

        <NumberPicker
            android:id="@+id/hour_picker"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/day_text"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/hours_text"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/hour_picker"
            android:layout_centerVertical="true"
            android:layout_alignBaseline="@+id/hour_picker"
            android:layout_height="wrap_content"
            android:text="hours"/>

        <NumberPicker
            android:id="@+id/minute_picker"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/hours_text"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/minutes_text"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignBaseline="@+id/minute_picker"
            android:layout_toRightOf="@+id/minute_picker"
            android:layout_height="wrap_content"
            android:text="minutes"/>


    </RelativeLayout>

</RelativeLayout>